{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python@3.1.0",
      "maxDuration": 60,
      "memory": 1024,
      "regions": ["fra1"],
      "experimental": {
        "fluidCompute": true
      }
    }
  },
  "routes": [
    { "src": "/api/gemini_audio", "dest": "/api/gemini_audio.py" }
  ],
  "env": {
    "GOOGLE_API_KEY": "${GOOGLE_API_KEY}"
  }
}
