{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "framework": "vite",
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@3.0.0",
      "config": {
        "maxDuration": 10
      },
      "auth": false
    }
  },
  "rewrites": [
    { "source": "/api/gemini", "destination": "/api/gemini/route" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
