{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/gemini", "destination": "/api/gemini/route" }
  ],
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "AIzaSyC77mmHQCmDsUSk86pP4IbGwtSjL-fa9qc",
    "GEMINI_API_KEY": "AIzaSyC77mmHQCmDsUSk86pP4IbGwtSjL-fa9qc"
  }
}
