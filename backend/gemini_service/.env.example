# Required settings
GOOGLE_API_KEY=your_google_api_key_here

# Server settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# WebSocket settings
WS_PING_INTERVAL=30  # seconds
WS_PING_TIMEOUT=10   # seconds

# CORS settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Voice settings
DEFAULT_VOICE=Charon
DEFAULT_LANGUAGE=en-US
DEFAULT_VOICE_RATE=1.0     # Range: 0.25 to 4.0
DEFAULT_VOICE_PITCH=0.0    # Range: -20.0 to 20.0

# Development settings
RELOAD=true               # Enable auto-reload for development
DEBUG=false              # Enable debug mode
SAVE_AUDIO_SAMPLES=true  # Save audio samples for debugging

# Performance settings
MAX_CONNECTIONS=100      # Maximum concurrent WebSocket connections
CHUNK_SIZE=32768        # Audio chunk size in bytes (32KB)
CHUNK_DELAY=10          # Delay between chunks in milliseconds

# Monitoring settings
ENABLE_METRICS=true     # Enable performance metrics collection
METRICS_PORT=9090       # Port for metrics endpoint

# Logging settings
LOG_FORMAT=json         # json or text
LOG_FILE=gemini_service.log
MAX_LOG_SIZE=10485760   # 10MB
MAX_LOG_BACKUPS=3       # Number of log files to keep

# Test settings
TEST_AUDIO_DIR=test_audio_output
DEBUG_OUTPUT_DIR=debug_output

# Security settings (for production)
#SSL_CERT_PATH=/path/to/cert.pem
#SSL_KEY_PATH=/path/to/key.pem
#JWT_SECRET=your_jwt_secret_here
#RATE_LIMIT=100  # Requests per minute per IP

# Documentation
# -------------
# GOOGLE_API_KEY: Get from https://console.cloud.google.com/
# DEFAULT_VOICE: Available voices: Charon, Alto, Bass, Tenor, etc.
# DEFAULT_LANGUAGE: Format: <language code>-<country code> (e.g., en-US, es-ES)
# LOG_LEVEL: Controls verbosity of logging
# ALLOWED_ORIGINS: Comma-separated list of allowed CORS origins
# WS_PING_INTERVAL: How often to send ping messages to keep connection alive
# WS_PING_TIMEOUT: How long to wait for pong response before considering connection dead

# Example values for testing
# -------------------------
# GOOGLE_API_KEY=AIza...
# HOST=localhost
# PORT=8000
# ALLOWED_ORIGINS=http://localhost:5173
# LOG_LEVEL=DEBUG
# DEBUG=true
